<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/myblack</item>
        <item name="android:textColorSecondary">@color/myblack</item>
        <item name="colorControlActivated">#c6c6c6</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>

    </style>

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogAnimation" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/scale</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="TransparentLayout" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="android:windowFrame">@null</item>-->
        <item name="android:windowBackground">@color/blackAlpha</item>
        <item name="android:windowIsFloating">true</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowTitleStyle">@null</item>-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@color/blackAlpha</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="colorPrimary">@color/myblack</item>
        <item name="colorPrimaryDark">@color/myblack</item>
        <item name="colorAccent">@color/myblack</item>
        <item name="actionMenuTextColor">@color/myblack</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
